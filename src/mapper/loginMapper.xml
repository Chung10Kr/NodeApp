<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="loginMapper">
  <select id="getLogin">
   <![CDATA[
      SELECT 
          USER_ID, 
          USER_NAME
        FROM 
          ENV_USER 
        WHERE 
          USER_ID = #{p_user_id} 
    ]]>
  </select>
</mapper>